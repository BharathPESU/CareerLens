
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any logged-in user to create, read, and update
    // ONLY THEIR OWN document in the 'users' collection.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // You can deny deletion if you want
      allow delete: if false; 
    }
  }
}
